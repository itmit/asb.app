<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="itmit.asb.app.Views.Guard.BidDetailPage"
             BackgroundImageSource="mainf.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Center" Margin="0,30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Column="0" Grid.Row="0" VerticalOptions="Fill" HorizontalOptions="Center">
                        <Frame BackgroundColor="#ef2b2e" Padding="3" CornerRadius="100" VerticalOptions="Center">
                            <Frame CornerRadius="100" BackgroundColor="#222222" Padding="40">
                                <Image Source="{Binding UserPictureSource}"  VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="120"/>
                            </Frame>
                        </Frame>
                    </StackLayout>
                    <StackLayout Margin="0,20" Grid.Row="1" Padding="30,15">
                        <Label TextColor="#b2110d" FontSize="20" Text="{Binding Name}" Margin="0,15,0,0" HorizontalOptions="Center"/>
                        <Label TextColor="#b2110d" FontSize="20" Text="{Binding Organization}" Margin="0,15,0,0" HorizontalOptions="Center"/>
                        <Label TextColor="#b2110d" FontSize="20" Text="{Binding PhoneNumber}" Margin="0,15,0,0" HorizontalOptions="Center"/>
                        <Label TextColor="#b2110d" FontSize="20" Text="{Binding Email}" Margin="0,15,0,0" HorizontalOptions="Center"/>
                    </StackLayout>
                    <StackLayout Margin="30,10,30,0" Grid.Column="0" Grid.Row="2">
                        <StackLayout Padding="1" BackgroundColor="Black">
                            <StackLayout HeightRequest="200" Margin="0" BackgroundColor="#2a2a2a">
                                <Label Text="{Binding Node}" TextColor="#b2110d" HorizontalOptions="Fill" VerticalOptions="Fill"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>