<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="itmit.asb.app.Views.LoginPage"
             xmlns:ex="clr-namespace:itmit.asb.app.Controls"
             xmlns:asb="clr-namespace:itmit.asb.app"
             BackgroundImageSource="mainf.png"
             >
    <ContentPage.Content>
        <Grid ColumnSpacing="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0">
                <StackLayout>
                    <Label Text="Неправильные логин или пароль" TextColor="#b20e0b" IsVisible="{Binding AuthNotSuccess}"/>
                    <ex:LoginEntry Margin="30" Placeholder="ТЕЛЕФОН" FontSize="Large" TextColor="#b20e0b" PlaceholderColor="#b20e0b" Text="{Binding Login}" Keyboard="Numeric">
                        <ex:LoginEntry.Behaviors>
                            <asb:MaskedBehavior Mask="+X (XXX) XXX-XX-XX"/>
                        </ex:LoginEntry.Behaviors>
                    </ex:LoginEntry>
                    <ex:LoginEntry Margin="30" Placeholder="ПАРОЛЬ" FontSize="Large" TextColor="#b20e0b" PlaceholderColor="#b20e0b" Text="{Binding Password}" IsPassword="True"/>
                    <Button Margin="0,20,0,0" HorizontalOptions="Center" Text="ВОЙТИ" Command="{Binding LoginCommand}" BackgroundColor="#b20e0b" Padding="0,15" WidthRequest="230" TextColor="White" FontSize="Large" CornerRadius="10"/>
                </StackLayout>
            </ScrollView>
            <BoxView  Grid.Row="1" BackgroundColor="Black" HeightRequest="1"/>
            <Grid  Grid.Row="2" ColumnSpacing="0" RowSpacing="0" BackgroundColor="#222222" Padding="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ImageButton Source="ic_adjust_black_36dp.png" Grid.Row="0" Grid.Column="0" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"/>
                <ImageButton Source="ic_call_black_36dp.png" Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"/>
                <ImageButton Source="ic_account_circle_black_36dp.png" Grid.Row="0" Grid.Column="2" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"/>
                <ImageButton Source="ic_vertical_align_top_black_36dp" Grid.Row="0" Grid.Column="3" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"/>
                <ImageButton Source="ic_keyboard_tab_black_36dp.png" Grid.Row="0" Grid.Column="4" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>