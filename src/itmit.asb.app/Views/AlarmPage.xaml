<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ex="clr-namespace:itmit.asb.app.Controls"
             x:Class="itmit.asb.app.Views.alarm"
             BackgroundImageSource="mainf.png"
             NavigationPage.HasNavigationBar="false"
             >
    <ContentPage.Content>
        <Grid ColumnSpacing="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0">
                <StackLayout HorizontalOptions="Center" Margin="0,50" VerticalOptions="Center">
                    <StackLayout HeightRequest="300" Margin="80,0">
                        <Frame BorderColor="#2e2e2e" BackgroundColor="#2e2e2e" CornerRadius="100" Margin="0" Padding="10">
                            <Frame BackgroundColor="#000000" CornerRadius="100" Margin="0" Padding="5">
                                <Frame BackgroundColor="#ef2b2e" CornerRadius="100" WidthRequest="180" HeightRequest="180"  Margin="0" Padding="0">
                                    <Grid ColumnSpacing="0">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding AlarmCommand}"  NumberOfTapsRequired="1"/>
                                        </Grid.GestureRecognizers>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" Grid.Row="0" Source="img_424515.png" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,15,0,0"/>
                                        <Label Grid.Column="0" Grid.Row="1" Text="ТРЕВОГА"  TextColor="White" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,0"/>
                                    </Grid>
                                </Frame>
                            </Frame>
                        </Frame>
                    </StackLayout>
                    <StackLayout Margin="100,0">
                        <Frame OutlineColor="#2e2e2e" BackgroundColor="#2e2e2e" CornerRadius="100" Margin="0" Padding="10">
                            <Frame BackgroundColor="#000000" CornerRadius="100" Margin="0" Padding="5">
                                <Frame BackgroundColor="#ef2b2e" CornerRadius="100" WidthRequest="140" HeightRequest="140" Margin="0" Padding="0">
                                    <Grid>
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding AlarmCommand}"  NumberOfTapsRequired="1"/>
                                        </Grid.GestureRecognizers>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" Grid.Row="0" Source="zvonok.png" Margin="0,15,0,0"/>
                                        <Label Grid.Column="0" Grid.Row="1" Text="ТРЕВОГА И" TextColor="White" FontSize="15" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,0"/>
                                        <Label Grid.Column="0" Grid.Row="2" Text="ЗВОНОК" TextColor="White" FontSize="15" HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Grid>
                                </Frame>
                            </Frame>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
            <BoxView  Grid.Row="1" BackgroundColor="Black" HeightRequest="1"/>
            <Grid  Grid.Row="2" ColumnSpacing="0" RowSpacing="0" BackgroundColor="#222222" Padding="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label x:Name="Exception_alarm"/>
                <ImageButton Source="ic_adjust_black_36dp.png" Grid.Row="0" Grid.Column="0" Clicked="ImageButton_Clicked" Style="{StaticResource ButtonMenu}"/>
                <ImageButton Source="ic_call_black_36dp.png" Grid.Row="0" Grid.Column="1" Clicked="ImageButton_Clicked_1" Style="{StaticResource ButtonMenu}" />
                <ImageButton Source="ic_account_circle_black_36dp.png" Grid.Row="0" Grid.Column="2"  Clicked="ImageButton_Clicked_2" Style="{StaticResource ButtonMenu}"/>
                <ImageButton Source="ic_vertical_align_top_black_36dp" Grid.Row="0" Grid.Column="3" Clicked="ImageButton_Clicked_3" Style="{StaticResource ButtonMenu}"/>
                <ImageButton Source="ic_keyboard_tab_black_36dp.png" Grid.Row="0" Grid.Column="4" Clicked="ImageButton_Clicked_4" Style="{StaticResource ButtonMenu}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>